{
  "name": "functions",
  "scripts": {
    "clean": "rimraf ./dist",
    "lint-check": "eslint \"{src,apps}/**/*.ts\"",
    "lint": "eslint \"{src,apps}/**/*.ts\" --fix",
    "pre:push": "npm run format && npm run lint && npm run build && npm run test",
    "build": "tsc -b ./tsconfig.build.json",
    "serve": "npm run build && firebase emulators:start --only functions --project nftc-dev",
    "shell": "npm run build && firebase functions:shell",
    "start:shell": "npm run shell",
    "deploy:dev": "firebase deploy --only functions --project nftc-dev",
    "deploy:prod": "firebase deploy --only functions --project nftc-infinity",
    "deploy:sales:dev": "npm run build && gcloud app deploy -q --appyaml=./app.sales-sync.dev.yaml --project=nftc-dev",
    "deploy:sales:prod": "npm run build && gcloud app deploy -q --appyaml=./app.sales-sync.prod.yaml --project=nftc-infinity",
    "deploy:orders:dev": "npm run build && gcloud app deploy -q --appyaml=./app.orders-sync.dev.yaml --project=nftc-dev",
    "deploy:orders:prod": "npm run build && gcloud app deploy -q --appyaml=./app.orders-sync.prod.yaml --project=nftc-infinity",
    "logs": "firebase functions:log",
    "update:lib": "npm install @infinityxyz/lib@latest",
    "backfill-orders": "npx cross-env NODE_PATH=./src ts-node ./src/scripts/backfill-orders-to-nfts.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "snapshot": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/snapshot.ts",
    "start-reservoir": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/start-reservoir.ts",
    "backfill-reservoir-orders": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/backfill-orders.ts",
    "start-sales-sync": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/start-sales-sync.ts",
    "check-sync": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/check-sync.ts",
    "update-orders": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/update-orders.ts",
    "start:dev": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/app-engine/index.ts",
    "start": "node --max-old-space-size=4096 -r dotenv/config ./dist/app-engine/bootstrap.js",
    "backfill-pg-orders": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/backfill-orders-to-pg.ts",
    "backfill-supported-collections": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/backfill-supported-collections.ts",
    "check-supported-collections": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/check-supported-collections.ts",
    "dev": "npx cross-env NODE_PATH=./src ts-node -r dotenv/config ./src/scripts/dev.ts",
    "trigger-order-events": "npm run clean && npm run build && npx cross-env node -r dotenv/config ./dist/scripts/trigger-order-events.js",
    "validate-orders": "npm run clean && npm run build && npx cross-env node -r dotenv/config ./dist/scripts/validate-orders.js",
    "update-order-status-events": "npm run clean && npm run build && npx cross-env node -r dotenv/config ./dist/scripts/update-order-status-events.js",
    "purge-firestore": "npm run clean && npm run build && npx cross-env node -r dotenv/config ./dist/scripts/purge-firestore/index.js"
  },
  "engines": {
    "node": "16"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@georgeroman/evm-tx-simulator": "^0.0.9",
    "@infinityxyz/lib": "^1.332.0",
    "@reservoir0x/reservoir-kit-client": "^0.2.5",
    "@reservoir0x/sdk": "0.0.323",
    "@types/node": "^18.11.19",
    "@uniswap/sdk-core": "^3.0.1",
    "@uniswap/v3-sdk": "^3.9.0",
    "bullmq": "^3.6.4",
    "date-fns": "^2.29.1",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.6",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.0",
    "got": "^11.8.3",
    "ioredis": "^5.3.0",
    "jsbi": "^3.1.4",
    "module-alias": "^2.2.2",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.2",
    "p-queue": "^6.6.2",
    "pg-promise": "^11.0.2",
    "phin": "^3.6.1",
    "quick-lru": "^5.1.1",
    "redlock": "^5.0.0-beta.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/jest": "^27.5.0",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^28.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.5"
  },
  "private": true,
  "_moduleAliases": {
    "@/firestore": "dist/firestore",
    "@/config": "dist/config",
    "@/lib": "dist/lib",
    "@/app-engine": "dist/app-engine"
  }
}
