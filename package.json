{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"{src,apps}/**/*.ts\" --fix",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:dev": "firebase deploy --only functions --project nftc-dev",
    "deploy:prod": "firebase deploy --only functions --project nftc-infinity",
    "logs": "firebase functions:log",
    "update:lib": "npm install @infinityxyz/lib@latest",
    "backfill-orders": "npx cross-env NODE_PATH=./src ts-node ./src/scripts/backfill-orders-to-nfts.ts",
    "backfill-collection-data": "npx cross-env NODE_PATH=./src ts-node ./src/scripts/backfill-collection-data-to-nfts.ts"
  },
  "engines": {
    "node": "16"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@infinityxyz/lib": "^1.104.0",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "p-queue": "^6.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
